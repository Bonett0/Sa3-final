

<%- include("includes/header") %>


<main class="website_content">

    <!-- CHALLENGES SCROLLABLE -->
    <div>
        <h2>Challenges</h2>
    </div>
    <div class="scrolling_div">
        <div class="cover">
            <div class="scrolling_images">
                <div class="scrolling_img_div"><img class="scrolling_img" src="/static/img/myimg.jpg" alt=""></div>
                <div class="scrolling_img_div"><img class="scrolling_img" src="/static/img/myimg.jpg" alt=""></div>
                <div class="scrolling_img_div"><img class="scrolling_img" src="/static/img/myimg.jpg" alt=""></div>
                <div class="scrolling_img_div"><img class="scrolling_img" src="/static/img/myimg.jpg" alt=""></div>
