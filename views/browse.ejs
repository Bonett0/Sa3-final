    <!-- Score Board -->
    <div class="separe">
        <h2>Scoreboard</h2>
    </div>

    <section class="outer_board_section">
        <section class="inner_board_section">
            <% for (let i = 0; i < 10; i++) { %>    
                <div class="board_content">
                    <div class="img">
                        <img src="/static/img/avatar.png" alt="picture_1">
                    </div>
                    <div class="player">
                        <p><span>1.</span> Charles John</p>
                        <div class="score_bar_wrap">
                            <div class="score_bar"></div>
                        </div>
                    </div>
                    <div class="points">
                        200 points
                    </div>
                </div>
            <% } %>
        </section>
    </section>
  
</main>





